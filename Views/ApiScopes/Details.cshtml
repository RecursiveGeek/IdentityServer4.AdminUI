@model IdentityServer4.AdminUI.Models.ApiScopes
@using Microsoft.AspNetCore.Http;
@{
    var ApiResourceName = IdentityServer4.AdminUI.Helpers.VarHelper.ApiResourceName;
    var ApiScopeName = IdentityServer4.AdminUI.Helpers.VarHelper.ApiScopeName;
    var ApiResourceId = IdentityServer4.AdminUI.Helpers.VarHelper.ApiResourceId;
    var ApiScopeId = IdentityServer4.AdminUI.Helpers.VarHelper.ApiScopeId;
}
<title>ApiScopes-Details</title>
<hr />
@* Details table. *@
<div class="card mb-3">
    <div class="card-header">
        <i></i>
        <h2>Api Scope Details for: </h2>
        <h2>    @Context.Session.GetString(ApiResourceName) : </h2>
        <h2>    @Context.Session.GetString(ApiScopeName)</h2>
        <hr />
        @* Below are the buttons at the top of the details page table *@
        <div class="form-inline">
            <form asp-controller="ApiSecrets" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ApiResourceId)">

                <input type="submit" value="Secrets" class="btn btn-outline-warning" />

            </form>

            <form asp-controller="ApiClaims" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ApiResourceId)">

                <input type="submit" value="Claims" class="btn btn-outline-warning" />

            </form>
            <form asp-controller="ApiScopes" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ApiResourceId)">

                <input type="submit" value="Scopes" class="btn btn-outline-primary" />

            </form>
            <form asp-controller="ApiScopeClaims" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ApiScopeId)">

                <input type="submit" value="ScopeClaims" class="btn btn-outline-warning" />

            </form>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Attribute</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Attribute</th>
                        <th>Value</th>

                    </tr>
                </tfoot>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Id)

                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Description)

                        </td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.ApiResourceId)</td>
                        <td>@Html.DisplayFor(model => model.ApiResourceId)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.DisplayName)</td>
                        <td>@Html.DisplayFor(model => model.DisplayName)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.Emphasize)</td>
                        <td>@Html.DisplayFor(model => model.Emphasize)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.Name)</td>
                        <td>@Html.DisplayFor(model => model.Name)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.Required)</td>
                        <td>@Html.DisplayFor(model => model.Required)</td>
                    </tr>
                    <tr>
                        <td> @Html.DisplayNameFor(model => model.ShowInDiscoveryDocument)</td>
                        <td>@Html.DisplayFor(model => model.ShowInDiscoveryDocument)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">&nbsp;</div>
</div>
<hr />
@* Page Navigation buttons. *@
<div>
    <a asp-controller="ApiScopes" asp-action="create">
        <input type="submit" class="btn btn-info" value="New Scope" />
    </a>
    <i class="fas fa-square-full fa-xs fa-rotate-90"></i>
    <a asp-controller="ApiResources" asp-action="Index">
        <input type="submit" value=" Back to Api Resources" class="btn btn-info" />
    </a>
</div>