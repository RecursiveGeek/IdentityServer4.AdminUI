@model IdentityServer4.AdminUI.Models.ClientScopes
@using Microsoft.AspNetCore.Http;
@{
    var ClientName = IdentityServer4.AdminUI.Helpers.VarHelper.ClientName;
}
    <title>Client-Scope-Delete</title>
<hr />

@* Display for delete information *@
<h3>Are you sure you want to delete this?</h3>
<h2>    @Context.Session.GetString(ClientName)</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClientId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Scope)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Scope)
        </dd>

    </dl>
    @* Post delete and navigation buttons. *@
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-info" />
    </form>
    <hr />
    <form asp-action="/Index">
        <input type="submit" value="Back to Scopes" class="btn btn-info" />
    </form>
    <form asp-controller="Clients" asp-action="Index">

        <input type="submit" value=" Back to Clients" class="btn btn-info" />

    </form>
</div>