@model IdentityServer4.AdminUI.Models.IdentityResources
@using Microsoft.AspNetCore.Http;

<title>Identity-Resources-Edit</title>


<h2>Edit</h2>

<h4>Identity resources</h4>
@* Edit Form (to be posted) *@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-inline">
                <input type="submit" value="Save" class="btn btn btn-info" />
                &nbsp;<i class="fas fa-square-full fa-xs fa-rotate-90"></i>&nbsp;
                @*This is the button to trigger the modal below.*@
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#Confirm_Leave">
                    Back to Resources
                </button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@* Modal window *@
<div class="modal fade" id="Confirm_Leave" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to leave?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                If you leave changes you made will be not be saved.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn btn-info" data-dismiss="modal">Cancel</button>
                <form asp-action="/Index">
                    <input type="submit" value="Back to Resources" class="btn btn-info" />
                </form>
            </div>
        </div>
    </div>
</div>