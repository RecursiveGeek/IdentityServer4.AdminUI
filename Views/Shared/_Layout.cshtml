<!DOCTYPE html>
<html>
@{
    @*Note: below retrieves the copyright year and message, the copyright symbol is manually placed in the footer.*@
    var copyright = IdentityServer4.AdminUI.Models.ConfigurationManager.AppSetting["Custom:Copyright"];
}
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

</head>
<div name="scripts">
    @*  The ~/ added allows all pages to hit this  *@
    @* The "~" causes it to find the file, if the pages go "deep" (i.e. clients/create) then it still can locate it *@
    @*Custom fonts for this template*@
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    @*Page level plugin CSs*@
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    @*Custom styles for this template*@
    <link href="~/css/sb-admin.css" rel="stylesheet">
    @*Bootstrap core JavaScript*@
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    @*Core plugin JavaScript*@
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    @*Page level plugin JavaScript*@
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>

    @*Custom scripts for all pages*@
    <script src="~/js/sb-admin.min.js"></script>

    @*Demo scripts for this page*@
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/js/demo/chart-area-demo.js"></script>
</div>

<body style=" border-left-width: 0px; margin-left: 0px;">
    <nav class="navbar navbar-expand navbar-light static-top" style="background-color: #000000;">
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">

                <li class="nav-item" ata-toggle="tooltip" title="Client">
                    <a class="nav-link" href="/clients" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-fw fa-users"></i>
                        <span></span>
                    </a>
                </li>
                <li class="nav-item" ata-toggle="tooltip" title="Identity Resources">
                    <a class="nav-link" href="/IdentityResources" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-fw fa-journal-whills"></i>
                        <span></span>
                    </a>
                </li>
                <li class="nav-item " ata-toggle="tooltip" title="(api)resources">
                    <a class="nav-link" href="/ApiResources" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-fw fa-stethoscope fa-lg"></i>
                        <span></span>
                    </a>
                </li>
                @* Below is the top nav bar dropdown menu for Help pages *@
                <li class="nav-item dropdown" ata-toggle="tooltip" data-placement="bottom" title="Help Pages">
                    <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-fw fa-question"></i>
                        <span></span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                        <h6 class="dropdown-header">Help Pages:</h6>
                        <a class="dropdown-item" href="/Home/About">About</a>
                        <a class="dropdown-item" href="/home/Contact">Contact us</a>
                        <div class="dropdown-divider"></div>
                    </div>
            </ul>
        </div>

    </nav>

    <partial name="_CookieConsentPartial" />


    @RenderSection("Scripts", required: false)


    <div id=" wrapper">

        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>
</body>
</html>
<footer>
    <p>&copy;@copyright</p>
</footer>