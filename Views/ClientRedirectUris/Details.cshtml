@model IdentityServer4.AdminUI.Models.ClientRedirectUris
@using Microsoft.AspNetCore.Http;
@{
    var ClientName = IdentityServer4.AdminUI.Helpers.VarHelper.ClientName;
    var ClientId = IdentityServer4.AdminUI.Helpers.VarHelper.ClientId;
}
    <title>Client-RedirectUri-Details</title>
<hr />
@* Details table. *@
<div class="card mb-3">
    <div class="card-header">
        <i></i>
        <h2>Redirect Uri  Details For: </h2>
        <h2>    @Context.Session.GetString(ClientName)</h2>
        <hr />
        @* Below are the buttons at the top of the details page table *@
        <div class="form-inline">

            <form asp-controller="ClientSecrets" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Secrets" class="btn btn-outline-warning" />

            </form>

            <form asp-controller="ClientClaims" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Claims" class="btn btn-outline-warning" />

            </form>
            <form asp-controller="ClientCorsOrigins" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Cors Origins" class="btn btn-outline-warning" />

            </form>
            <form asp-controller="ClientGrantTypes" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Grant Types" class="btn btn-outline-warning" />

            </form>
            <form asp-controller="ClientIdPRestrictions" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Id PRestrictions" class="btn btn-outline-warning" />

            </form>
            <form asp-controller="ClientPostLogoutRedirectUris" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Post Logout Redirect Uris" class="btn btn-outline-warning" />

            </form>
            <form asp-controller="ClientProperties" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Properties" class="btn btn-outline-warning" />

            </form>
            <form asp-controller="ClientRedirectUris" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Redirect Uris" class="btn btn-outline-primary" />

            </form>
            <form asp-controller="ClientScopes" asp-action="Index" asp-route-searchString=" @Context.Session.GetInt32(ClientId)">

                <input type="submit" value="Scopes" class="btn btn-outline-warning" />

            </form>

        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Attribute</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Attribute</th>
                            <th>Value</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayNameFor(model => model.ClientId)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.ClientId)
                            </td>
                        </tr>
                        <tr>
                            <td> @Html.DisplayNameFor(model => model.RedirectUri)</td>
                            <td>
                                @Html.DisplayFor(model => model.RedirectUri)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer small text-muted">&nbsp;</div>
    </div>
</div>
@* Page Navigation buttons. *@
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id"><input type="submit" value="Edit" class="btn btn-info" /></a>
    <i class="fas fa-square-full fa-xs fa-rotate-90"></i>
    <a asp-action="Index"><input type="submit" value=" Back to Redirect Uris" class="btn btn-info" /></a>
    <i class="fas fa-square-full fa-xs fa-rotate-90"></i>
    <a asp-controller="Clients" asp-action="Index">

        <input type="submit" value=" Back to Clients" class="btn btn-info" />

    </a>
</div>