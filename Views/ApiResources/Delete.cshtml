@model IdentityServer4.AdminUI.Models.ApiResources
@using Microsoft.AspNetCore.Http;
@{
    var ApiResourceName = IdentityServer4.AdminUI.Helpers.VarHelper.ApiResourceName;
}
<title>Api-Resources-Delete</title>

@* Display for delete information *@
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Context.Session.GetString(ApiResourceName)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DisplayName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DisplayName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Enabled)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Enabled)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <hr/>
    <div class="form-inline">
        @* Post delete and navigation buttons. *@
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-info" />
        </form>
        &nbsp;<i class="fas fa-square-full fa-xs fa-rotate-90"></i>&nbsp;
        <form asp-action="/Index">
            <input type="submit" value="Back to Resources" class="btn btn-info" />
        </form>
    </div>
</div>